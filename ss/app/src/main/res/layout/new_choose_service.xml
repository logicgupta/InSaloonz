<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="@mipmap/choose_1"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <View
                    android:layout_width="250dp"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:gravity="center"></View>

                <TextView
                    android:id="@+id/chooseTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:fontFamily="@font/macondoswashcaps"
                    android:gravity="center"
                    android:text="Choose Service"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true">


                    <TextView
                        android:id="@+id/maleTextView"
                        android:layout_width="0dp"
                        android:layout_height="31dp"
                        android:layout_gravity="end|center|left"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="2.8"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="MALE"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/femaleTextViewSelect"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="70dp"
                        android:layout_weight="1"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="right|center|end"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="10dp"
                        android:text="FEMALE"
                        android:textSize="16sp" />


                </LinearLayout>


            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#c0c0c0c0"
                ></View>

            <android.support.v7.widget.CardView
                android:id="@+id/HairStyleMale"
                android:layout_width="309dp"
                android:layout_height="97dp"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:background="@drawable/edittext_design"
                android:padding="4dp"
                app:cardCornerRadius="14dp"
               >

                <LinearLayout
                    android:layout_width="309dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_design"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="99dp"
                        android:background="@mipmap/male_hair" />

                    <LinearLayout
                        android:layout_width="136dp"
                        android:layout_height="79dp"
                        android:layout_margin="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/macondoswashcaps"
                            android:text="Hair"
                            android:textColor="#28B8C0"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Haircut ,Colouring &amp; Styling" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:foregroundGravity="center"
                        android:text="   >"
                        android:textColor="#28B8C0"
                        android:textSize="30dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="309dp"
                android:layout_height="97dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_design"
                android:padding="4dp"
                app:cardCornerRadius="14dp"
             >

                <LinearLayout
                    android:layout_width="309dp"
                    android:layout_height="99dp"
                    android:background="@drawable/edittext_design"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="99dp"
                        android:background="@mipmap/male_ahave" />

                    <LinearLayout
                        android:layout_width="166dp"
                        android:layout_height="79dp"
                        android:layout_margin="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/macondoswashcaps"
                            android:text="Shaves"
                            android:textColor="#28B8C0"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Traditional straight razor shaves ,hot towels, and balm treatment" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:text=">"
                        android:textColor="#28B8C0"
                        android:textSize="30dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/SpaStyleMale"
                android:layout_width="309dp"
                android:layout_height="99dp"

                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_design"
                android:padding="4dp"
                app:cardCornerRadius="14dp"
                >

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="309dp"
                    android:layout_height="99dp"
                    android:background="@drawable/edittext_design"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="99dp"
                        android:background="@mipmap/male_spa" />

                    <LinearLayout
                        android:layout_width="166dp"
                        android:layout_height="79dp"
                        android:layout_margin="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/macondoswashcaps"
                            android:text="Spa"
                            android:textColor="#28B8C0"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Essential facial and peels, sport massage ,deep tissue massage" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:text=">"
                        android:textColor="#28B8C0"
                        android:textSize="30dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/BeautyStyleMale"
                android:layout_width="309dp"
                android:layout_height="99dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_design"
                android:padding="4dp"
                app:cardCornerRadius="14dp"
                >

                <LinearLayout
                    android:layout_width="309dp"
                    android:layout_height="98dp"
                    android:background="@drawable/edittext_design"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="99dp"
                        android:background="@mipmap/male_threa" />

                    <LinearLayout
                        android:layout_width="166dp"
                        android:layout_height="79dp"
                        android:layout_margin="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/macondoswashcaps"
                            android:text="Threading"
                            android:textColor="#28B8C0"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eyebrow Shading ,Facial" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:text=">"
                        android:textColor="#28B8C0"
                        android:textSize="30dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="match_parent">


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>