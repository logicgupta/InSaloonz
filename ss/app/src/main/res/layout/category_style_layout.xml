<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:elevation="10dp"
    app:cardCornerRadius="7dp"
    android:paddingLeft="4dp"
    android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type_image"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/sample" />

            <RelativeLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/type_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="4dp"
                        android:text="Type"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/decription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:text="Description" />
                </LinearLayout>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="164dp"
                    android:layout_marginRight="164dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center|left"
                    android:text="Price"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/productAddService"
                    android:layout_width="117dp"
                    android:layout_height="36dp"
                    android:layout_alignStart="@+id/price"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="151dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="85dp"
                    android:background="@drawable/book_layout"
                    android:text="BOOK  +"

                    android:textColor="#ffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/showplusMinusButtonLayout"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"

                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="49dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp">


                    <Button
                        android:id="@+id/deleteCategory"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:text="-"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/showQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:text="Book"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/addCategory"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:text="+"
                        android:textSize="14dp" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>
