<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Categories.MaleHairActivity"
    tools:showIn="@layout/male_hair_app_bar_layout">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarr"
        android:background="@drawable/gradient_black"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="top"
            app:contentScrim="#000000"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            >
            <RelativeLayout
                android:id="@+id/SaloonImagesLayout"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/gradient_black"
                    android:layout_height="match_parent"></View>
                <com.github.ivbaranov.mfb.MaterialFavoriteButton
                    android:id="@+id/saloonFavourites"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    app:mfb_rotation_duration="400"
                    app:mfb_rotation_angle="360"
                    app:mfb_bounce_duration="300"
                    app:mfb_animate_favorite="true"
                    app:mfb_favorite_image="@drawable/ic_favorite_black_24dp"
                    app:mfb_not_favorite_image="@drawable/ic_favorite_border_black_24dp"
                    app:mfb_size="70"
                    app:mfb_type="heart" />

                <ImageView
                    android:id="@+id/optionImageView"
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="189dp"
                    android:background="@drawable/ic_more_vert_black_24dp" />

                <TextView
                    android:id="@+id/saloonName"
                    android:layout_width="238dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="67dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="55dp"
                    android:layout_marginBottom="184dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Saloon Name"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/backImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="69dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="319dp"
                    android:layout_marginBottom="176dp"
                    android:src="@drawable/ic_navigate_before_black_24dp" />
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>