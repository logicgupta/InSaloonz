<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@drawable/edittext_design"
    android:elevation="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/couponImageView"
            android:layout_width="130dp"
            android:background="@drawable/button2_design"
            android:src="@drawable/ic_add_shopping_cart_black_24dp"
            android:layout_height="100dp"
            android:layout_margin="4dp"/>
        <LinearLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/couponDescTextView"
                android:layout_width="match_parent"
                android:text="Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"

                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/addCouponCode"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:text="Coupon Code"
                android:layout_marginLeft="4dp"
                android:maxLength="15"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/couponCodeTextView"
                android:layout_margin="4dp"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:hint="Coupon Code"
                android:maxLength="15"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textAllCaps="true"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#d7d7d7"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/validityDateTextView"
            android:text="Valid till date "
            android:textSize="20dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:textColor="#D81B60"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/action_details"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:textSize="24sp"
            android:text="Details" />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/detailLayout"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/coupon_details"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center"
        android:textSize="24sp"
        android:text="Details" />

</LinearLayout>
</LinearLayout>