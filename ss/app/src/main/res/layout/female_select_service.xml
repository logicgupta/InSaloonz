<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="match_parent">

           <RelativeLayout
               android:id="@+id/linearLayout"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:background="@mipmap/choose_1"
               android:orientation="vertical"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent">

               <TextView
                   android:id="@+id/chooseTextView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_marginTop="15dp"
                   android:layout_marginBottom="22dp"
                   android:fontFamily="@font/macondoswashcaps"
                   android:gravity="center"
                   android:text="Choose Service"
                   android:textColor="#FFFFFF"
                   android:textSize="26sp" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="51dp"

                   android:layout_alignParentBottom="true"
                   android:layout_marginBottom="0dp">

                   <TextView
                       android:layout_marginTop="26dp"
                       android:id="@+id/femaleTextView"
                       android:layout_width="0dp"
                       android:layout_height="18dp"
                       android:layout_marginStart="8dp"
                       android:layout_marginEnd="8dp"
                       android:layout_weight="3.0"
                       android:fontFamily="@font/roboto_regular"
                       android:paddingLeft="10dp"
                       android:text="FEMALE"
                       android:textColor="#000000"
                       android:textSize="16sp" />

                   <TextView
                       android:id="@+id/maleTextViewSelect"
                       android:layout_width="0dp"
                       android:layout_marginTop="28dp"
                       android:layout_height="18dp"
                       android:layout_marginStart="8dp"
                       android:layout_marginEnd="8dp"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_regular"
                       android:gravity="left"
                       android:paddingLeft="10dp"
                       android:text="MALE"
                       android:textSize="16sp" />
               </LinearLayout>


           </RelativeLayout>

           <View
               android:id="@+id/view"
               android:layout_width="fill_parent"
               android:layout_height="1dp"
               android:layout_marginTop="@dimen/fragment_title_padding_10"
               android:background="#c0c0c0c0"
               ></View>

           <android.support.v7.widget.CardView
               android:id="@+id/hairStyleFemale"
               android:layout_width="310dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="28dp"
               android:background="@drawable/edittext_design"
               android:padding="4dp"
               app:cardCornerRadius="14dp"
              >

               <LinearLayout
                   android:layout_width="308dp"
                   android:layout_height="99dp"
                   android:background="@drawable/edittext_design"
                   android:orientation="horizontal"
                   android:padding="1dp">

                   <ImageView
                       android:layout_width="90dp"
                       android:layout_height="99dp"
                       android:background="@mipmap/femail_hair" />

                   <LinearLayout
                       android:layout_width="136dp"
                       android:layout_height="79dp"
                       android:layout_margin="12dp"
                       android:layout_marginLeft="8dp"
                       android:layout_marginTop="2dp"
                       android:layout_marginBottom="2dp"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/macondoswashcaps"
                           android:text="Hair"
                           android:textColor="#28B8C0"
                           android:textSize="24sp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Haircut ,Colouring &amp; Styling" />
                   </LinearLayout>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:foregroundGravity="center"
                       android:text="    >"
                       android:textColor="#28B8C0"
                       android:textSize="30dp" />
               </LinearLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:id="@+id/beautyStyleFemale"
               android:layout_width="310dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="24dp"

               android:background="@drawable/edittext_design"
               android:padding="4dp"
               app:cardCornerRadius="14dp"
           >

               <LinearLayout
                   android:layout_width="308dp"
                   android:layout_height="99dp"
                   android:background="@drawable/edittext_design"
                   android:orientation="horizontal"
                   android:padding="1dp">

                   <ImageView
                       android:layout_width="90dp"
                       android:layout_height="99dp"
                       android:background="@mipmap/female_care" />

                   <LinearLayout
                       android:layout_width="166dp"
                       android:layout_height="79dp"
                       android:layout_margin="12dp"
                       android:layout_marginLeft="8dp"
                       android:layout_marginTop="2dp"
                       android:layout_marginBottom="2dp"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/macondoswashcaps"
                           android:text="Skin Care"
                           android:textColor="#28B8C0"
                           android:textSize="24sp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="European facials ,body waxing" />
                   </LinearLayout>


                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:foregroundGravity="center"
                       android:text=">"
                       android:textColor="#28B8C0"
                       android:textSize="30dp" />
               </LinearLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:id="@+id/spaStyleFemale"
               android:layout_width="310dp"
               android:layout_height="99dp"
               android:layout_gravity="center"
               android:layout_marginTop="24dp"

               android:background="@drawable/edittext_design"
               android:padding="4dp"
               app:cardCornerRadius="14dp"
              >

               <LinearLayout
                   android:id="@+id/linearLayout2"
                   android:layout_width="308.5dp"
                   android:layout_height="99dp"
                   android:background="@drawable/edittext_design"
                   android:orientation="horizontal"
                   android:padding="1dp">

                   <ImageView
                       android:layout_width="90dp"
                       android:layout_height="99dp"
                       android:background="@mipmap/servicce_femalespa" />

                   <LinearLayout
                       android:layout_width="166dp"
                       android:layout_height="79dp"
                       android:layout_margin="12dp"
                       android:layout_marginLeft="8dp"
                       android:layout_marginTop="2dp"
                       android:layout_marginBottom="2dp"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/macondoswashcaps"
                           android:text="Spa"
                           android:textColor="#28B8C0"
                           android:textSize="24sp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="  sport massage ,deep tissue massage" />
                   </LinearLayout>


                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:foregroundGravity="center"
                       android:text=">"
                       android:textColor="#28B8C0"
                       android:textSize="30dp" />
               </LinearLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:id="@+id/nailStyleFemale"
               android:layout_width="310dp"
               android:layout_height="99dp"
               android:layout_gravity="center"
               android:layout_marginTop="24dp"

               android:background="@drawable/edittext_design"
               android:padding="4dp"
               app:cardCornerRadius="14dp">

               <LinearLayout
                   android:layout_width="308.5dp"
                   android:layout_height="98dp"
                   android:background="@drawable/edittext_design"
                   android:orientation="horizontal"
                   android:padding="1dp">

                   <ImageView
                       android:layout_width="90dp"
                       android:layout_height="99dp"
                       android:background="@mipmap/service_nail" />

                   <LinearLayout
                       android:layout_width="166dp"
                       android:layout_height="79dp"
                       android:layout_margin="12dp"
                       android:layout_marginLeft="8dp"
                       android:layout_marginTop="2dp"
                       android:layout_marginBottom="2dp"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/macondoswashcaps"
                           android:text="Nails"
                           android:textColor="#28B8C0"
                           android:textSize="24sp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="manicures ,pedicures, polish,sculptured nails" />
                   </LinearLayout>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:foregroundGravity="center"
                       android:text=">"
                       android:textColor="#28B8C0"
                       android:textSize="30dp" />
               </LinearLayout>
           </android.support.v7.widget.CardView>

           <LinearLayout
               android:layout_marginTop="50dp"
               android:layout_width="match_parent"
               android:visibility="visible"
               android:layout_height="match_parent">


           </LinearLayout>


       </LinearLayout>
   </ScrollView>

</LinearLayout>