<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:id="@+id/saloon_Name_CardView"
    android:layout_margin="5dp"
    android:layout_height="170dp">

    <RelativeLayout
        android:id="@+id/saloonPhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:background="@drawable/gradient_black"
            android:layout_height="match_parent">

        </View>

        <TextView
            android:id="@+id/saloonNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:text="SALOON NAME"
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/saloonRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="199dp"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="17dp"
            android:focusable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1"
            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/saloonTimingTextView"
            android:layout_width="160dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="170dp"
            android:layout_marginBottom="64dp"
            android:drawableLeft="@drawable/ic_watch_later_black_24dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center|left"
            android:padding="8dp"
            android:text="  Shop Timings"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/saloonAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="140dp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="21dp"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:fontFamily="@font/roboto_bold"
            android:padding="8dp"
            android:gravity="center|left"
            android:text="  Shop Address"
            android:textSize="12sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>